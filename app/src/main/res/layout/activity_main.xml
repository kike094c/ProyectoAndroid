<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.pgl.dam.incidencias.MainActivity">

    <TextView
        android:text="Gestor de incidencias UCA-FUE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <Button
        android:text="Iniciar incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iniciar"
        android:layout_weight="0.08"
        android:layout_marginTop="135dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Incidencias" />

    <Button
        android:text="Handling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/handling"
        android:onClick="altaHandling"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Ver Incidencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button10"
        android:onClick="todo"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Incidencias pendientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="26dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:onClick="pendientes2"
        android:layout_below="@+id/iniciar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Técnicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button14"
        android:textStyle="normal|bold"
        android:onClick="tecnicos" />

    <Button
        android:text="Compañías"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="altaCompania"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/handling"
        android:layout_alignBottom="@+id/handling"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
